{
    "$schema": "https:\/\/json-schema.org\/draft-07\/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "@context": {
            "readOnly": true,
            "type": "string",
            "pattern": "^https:\/\/schema.org\/$"
        },
        "@type": {
            "readOnly": true,
            "type": "string",
            "pattern": "^.*$"
        },
        "@id": {
            "readOnly": true,
            "type": "string",
            "pattern": "^/thing/.+$"
        },
        "name": {
            "description": "The name of the Thing",
